{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "env": {
                "STATIC_DIR": "capy-config-frontend/dist"
            },
            "jinja": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Frontend: Vite Dev Server (Development Only)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/capy-config-frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
        }
    ],
    "compounds": [
        {
            "name": "Run Full-Stack Locally (Separate Servers)",
            "configurations": [
                "Python Debugger: FastAPI",
                "Frontend: Vite Dev Server (Development Only)"
            ]
        }
    ]
}