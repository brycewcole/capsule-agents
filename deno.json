{
  "workspace": [
    "./capsule-agents-frontend",
    "./capsule-agents-backend"
  ],
  "tasks": {
    "build": "deno task --cwd capsule-agents-frontend build",
    "dev:frontend": "deno task --cwd capsule-agents-frontend dev",
    "dev:backend": "deno task --cwd capsule-agents-backend dev",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check"
  },
  "unstable": [
    "cron"
  ],
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "nodeModulesDir": "auto"
}
